<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/nomLib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Nom Lib"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/autorLib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nomLib"
        android:layout_below="@+id/nomLib"
        android:text="Autor : " />

    <ImageView
        android:id="@+id/imageArrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_above="@id/autorLib"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/arrow" />

    <View
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignRight="@+id/autorLib"
        android:layout_below="@+id/autorLib"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/langage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nomLib"
        android:layout_alignBottom="@+id/nomLib"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/nomLib"
        android:text="( Langage )"
        android:textColor="#fe5a00" />

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/langage"
        android:layout_alignBottom="@+id/langage"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/langage"
        android:text="Download" />

</RelativeLayout>
